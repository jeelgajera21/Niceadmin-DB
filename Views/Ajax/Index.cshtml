@model NiceAdmin.Models.UserModel
<main id="main" class="main">

    <div class="pagetitle">
    </div><!-- End Page Title -->
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Insert User Details</h5>

            <!-- General Form Elements -->
            <form method="post">
                <div class="row mb-3">
                    @* <label for="inputText" class="col-sm-2 col-form-label">UserID</label> *@
                    <div class="col-sm-10">
                        <input type="hidden" asp-for="UserID" class="form-control">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label">UserName </label>
                    <div class="col-sm-10">
                        <input asp-for="UserName" type="text" class="form-control" id="userid"/>

                        <span asp-validation-for="UserName" class="text-danger"></span>

                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label">Email </label>
                    <div class="col-sm-10">
                        <input asp-for="Email" type="text" class="form-control" id="email" />
                        <span asp-validation-for="Email" class="text-danger"></span>


                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail" class="col-sm-2 col-form-label">Password</label>
                    <div class="col-sm-10">
                        <input asp-for="Password" type="text" class="form-control" id="pass" />
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputNumber" class="col-sm-2 col-form-label">Mobile No</label>
                    <div class="col-sm-10">
                        <input asp-for="MobileNo" type="text" class="form-control" id="mob" />
                        <span asp-validation-for="MobileNo" class="text-danger"></span>

                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputDate" class="col-sm-2 col-form-label">Address</label>
                    <div class="col-sm-10">
                        <input asp-for="Address" type="text" class="form-control" id="add" />
                        <span asp-validation-for="Address" class="text-danger"></span>

                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputDate" class="col-sm-2 col-form-label">Active</label>
                    <div class="col-sm-10">
                        <input type="checkbox" id="checkid" />
                    </div>
                    <span asp-validation-for="IsActive" class="text-danger"></span>

                </div>


                <div class="text-center">
                    <button type="button" id="save" class="btn btn-primary">Save</button>

                </div>
            </form><!-- End General Form Elements -->

        </div>
    </div>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js">
    </script>

    <script type="text/javascript">
        $(document).ready(() => {
            console.log("UserData");
            $("#save").click(() => {
                console.log("btn clicked");
                var UserData = {
                    "username": $("#userid").val(),
                    "email": $("#email").val(),
                    "password": $("#pass").val(),
                    "mobile": $("#mob").val(),
                    "address": $("#add").val(),
                    "active": $("#checkid").is(":checked")
                };
                console.log(UserData);
                $.ajax({
                    type: "POST",
                    url: "/Ajax/JSaveUser",
                    data: UserData,
                    success: (data) => {
                        alert(" Data Inserted ");
                    }
                });
            });
        });
    </script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</main><!-- End #main -->